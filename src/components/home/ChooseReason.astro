<script>
class ChooseReason extends HTMLElement {
    constructor() {
			super();

		}
  }
  customElements.define("choose-reason", ChooseReason);
</script>


<style>
.top-title, .bottom-card {
  width: 85.125rem;
}
.bottom-card .item {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 0 0 25%;
  border-left: 1px solid theme('colors.gray.03');
}

/* 小于50rem  小于 800px */
@media (max-width: 50rem) { 
  .choose-reason {
    padding: 1.5rem;
  }
  .top-title, .bottom-card {
    width: 100%;
  }
  .top-title {
    margin-top: 2.5rem;
    margin-bottom: 2.5rem;
  }
  .top-title .title {
    font-size: 1.125rem; /* 18px */
    line-height: 1.75rem; /* 28px */
  }
  .bottom-card .item {
    flex: 0 0 100%;
    border-left: none;
    padding: 1.25rem 0;
    border-bottom: 1px solid theme('colors.gray.03');
  }
  .bottom-card .item .transfrom-header {
    display: flex;
  }
  .transfrom-header div:last-child {
    margin-left: 1rem;
  }
}


/* 大于50rem 小于 72rem  800px < width < 1152 */
@media (min-width: 50rem) and (max-width: 86rem) { 
  .choose-reason {
    padding: 2.5rem;
  }
  .top-title, .bottom-card {
    width: 100%;
  }
  .bottom-card .item {
    flex: 0 0 50%;
    border-left: none;
    padding-bottom: 1.25rem;
  }
  .bottom-card .item:first-child {
    border-right: 1px solid theme('colors.gray.03');
    border-bottom: 1px solid theme('colors.gray.03');
  }
  .bottom-card .item:nth-child(2) {
    border-bottom: 1px solid theme('colors.gray.03');
  }
  .bottom-card .item:nth-child(3) {
    border-right: 1px solid theme('colors.gray.03');
    padding-top: 1.25rem;
  }
  .bottom-card .item:last-child{
    padding-top: 1.25rem;
  }
}


</style>
