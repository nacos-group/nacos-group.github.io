</explore-features>

<script>
class ExploreFeatures extends HTMLElement {
  constructor() {
    super();

  }
}
customElements.define("explore-features", ExploreFeatures);
</script>


<style>
  .item {
    width: 31.25rem;
    height: 31.25rem;
    overflow: hidden;
  }

  .black-item {
    width: 63.5rem;
    /* 给固定高度防止给固定高度防止hover时高度发生变化抖动 */
    height: 14rem;
  }
  .item .hover-title {
    position: absolute;
    bottom: 1.5rem;
    left: 1.5rem;
    right: 1.5rem;
    opacity: 0;
    transition: opacity 0.8s ease-in-out; /* 动画效果 */
  }
  .item svg {
    transition: transform 0.8s;
  }
  .item:hover svg {
    margin-top: 2.5rem;
    transform: scale(0.8, 0.8);
  }
  .item:hover .hover-title {
    opacity: 1;
  }
  .black-item .hover-title {
    opacity: 0;
    transition: opacity 0.8s ease-in-out; /* 动画效果 */
  }
  .black-item .title {
    position: absolute;
    bottom: 0;
    left: 0;
    opacity: 1;
    transition: opacity 0.8s ease-in-out; /* 动画效果 */
  }
  .black-item:hover .title {
    opacity: 0;
  }
  .black-item:hover .hover-title {
    opacity: 1;
  }

  /* 小于50rem  小于 800px */
@media (max-width: 50rem) { 
  .explore-features {
    padding: 1.5rem;
  }
  .top-title {
    margin-top: 2.5rem;
    margin-bottom: 2.5rem;
  }
  .top-title .title {
    font-size: 1.125rem; /* 18px */
    line-height: 1.75rem; /* 28px */
  }
  .bottom-features div:first-child {
    flex-direction: column;
    align-items: center;
  }
  .bottom-features .transfrom-split {
    width: 100%;
    height: 1rem;
  }
  .bottom-features .discovery .hover-title {
    bottom: .5rem;
  }
  .bottom-features .item {
    width: 100%;
    height: 20rem;
  }
  .bottom-features .black-item {
    width: 100%;
    height: auto;
  }
  .bottom-features .item .title {
    font-size: 0.875rem;
    line-height: 1.25rem;
  }
  .bottom-features .item .hover-title {
    opacity: 1;
    font-size: 0.75rem; /* 12px */
    line-height: 1rem; /* 16px */
    margin-top: 1.5rem;
  }
  .bottom-features .item svg {
    margin-top: 1rem;
    transform: scale(0.8, 0.8);
    width: 7.5rem;
    height: 7.5rem;
  }
  .bottom-features .black-item .title {
    opacity: 0;
  }
  .bottom-features .black-item .hover-title {
    opacity: 1;
    width: 100%;
    margin-top: 1.5rem;
  }
  
}


/* 大于50rem 小于 72rem  800px < width < 1152 */
@media (min-width: 50rem) and (max-width: 72rem) { 
  .bottom-features .transfrom-split {
    height: 100%;
    width: 1rem;
  }
  .bottom-features .discovery .hover-title {
    bottom: .5rem;
  }
  .bottom-features .item {
    /* width: 31.25rem; */
    flex: 1;
    height: 31.25rem;
  }
  .bottom-features .black-item {
    width: 100%;
    height: 16rem;
  }
  .bottom-features .black-item .hover-title {
    width: 100%;
  }
}

</style>