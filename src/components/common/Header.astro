---
import LanguageToggle from "@components/common/LanguageToggle.astro";
import { useTranslations } from "@i18n/util";
const t = useTranslations(Astro);
import { getEntries } from "astro:content";
import { HEADER_ACTIVITY_CARD } from "../../consts";
import { Image } from "astro:assets";
interface Props {
  align?: "home" | "docs";
  position?: "static" | "sticky";
  lang: "zh-cn" | "en" | string;
}

const { align = "home", position = "sticky", lang } = Astro.props;
const height = align === "home" ? "4rem" : "3.5rem";
const justifyContent = align === "home" ? "space-between" : "flex-start";
const docsSubMenu = {
  shortcutMenus: {
    Documentation: [
      { label: "1.x", url: "/docs/what-is-nacos" },
      { label: "2.x", url: "/docs/v2/what-is-nacos" },
    ],
  },
};
const communitySubMenu = {
  shortcutMenus: {
    COMMUNITY: [
      // 提交问题
      {
        label: t("commmon.header.comm.report"),
        url: "https://github.com/alibaba/nacos/issues",
        target: "_blank",
      },
      // 贡献社区
      {
        label: t("commmon.header.comm.contribute"),
        url: "https://github.com/alibaba/nacos/pulls",
        target: "_blank",
      },
      // 贡献者
      {
        label: t("commmon.header.comm.contributors"),
        url: "https://github.com/alibaba/nacos/graphs/contributors",
        target: "_blank",
      },
    ],
    EVENTS: [
      { label: t("commmon.header.comm.news"), url: "/news" },
      { label: t("commmon.header.comm.active"), url: "/activity" },
    ],
    Resources: [
      { label: t("commmon.header.comm.blog"), url: "/blog" },
      { label: t("commmon.header.comm.ebook"), url: "/docs/ebook/kbyo6n.mdx" },
      { label: t("commmon.header.comm.download"), url: "/download/nacos-server" },
      // 版本下载功能暂且隐藏
      // {
      //   label: t("commmon.header.comm.download"),
      //   url: "/download/nacos-service",
      // },
    ],
    CONTACT_US: [
      {
        label: t("commmon.header.contact.git"),
        url: "https://github.com/alibaba/nacos",
      },
      { label: t("commmon.header.contact.ding"), url: "/" },
      {
        label: t("commmon.header.contact.mail"),
        url: "mailto:nacos_dev@linux.alibaba.com",
      },
    ],
  },
  shortcutCards: [
    {
      eventName: t("commmon.header.comm.shortcut"),
      imgUrl: "/left-shortcut.png",
      description: t("commmon.header.comm.leftcut"),
    },
    {
      eventName: t("commmon.header.comm.shortcut"),
      imgUrl: "/right-shortcut.png",
      description: t("commmon.header.comm.rightcut"),
    },
  ],
};

let posts = [];

try {
  posts = await getEntries(HEADER_ACTIVITY_CARD as any);
} catch (e) {
  console.error(e);
}

const titleBgImg = [
  "https://img.alicdn.com/imgextra/i4/O1CN01bGnAVW1pFeLFnlaQL_!!6000000005331-2-tps-508-370.png",
  "https://img.alicdn.com/imgextra/i4/O1CN01zfayJW1Lhe4kliPv9_!!6000000001331-2-tps-508-370.png",
];
---

<header-layout
  class="header bg-gray-14 relative flex justify-center"
  style={`position: ${position}; height: ${height}`}
>
  <div
    data-modal-panel
    class="modal-panel hidden h-screen absolute left-0 right-0 top-0"
  >
  </div>
  <div
    data-modal-nav
    style={`height: ${height}`}
    class:list={[
      "nav",
      "w-[85.125rem]",
      "bg-gray-14",
      "relative",
      "top-0",
      "right-0",
      "bottom-0",
      "left-0",
      "flex",
      "items-center",
      "justify-between",
    ]}
  >
    <!-- logo -->
    <a class="left-logo" href="/">
      <img
        class="logo"
        src="https://img.alicdn.com/imgextra/i4/O1CN01rW3vAB1FDWKSOiFf0_!!6000000000453-2-tps-204-40.png"
        alt="nacos-log"
      />
