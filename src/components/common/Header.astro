                  <span class="text-xs text-gray-10 mb-2"
                    >{t("commmon.header.comm.comm")}</span
                  >
                  {
                    communitySubMenu.shortcutMenus.COMMUNITY.map((menu) => {
                      const { label, url, target = "_self" } = menu;
                      return (
                        <a
                          class="text-sm text-gray-02 mt-3 "
                          href={url}
                          target={target}
