        <div data-nacos-cloud class="h-full flex items-center p-0.5">
          <span class="title">{t("commmon.header.menu.cloud")}</span>
        </div>
      </div>
      <span class="text-gray-12 text-xs">|</span>
      <div
        class="menu-item h-full flex items-center cursor-pointer text-gray-06 text-sm px-4"
      >
        <div data-community class="h-full flex items-center p-0.5">
          <span class="title">{t("commmon.header.menu.comm")}</span>
          <svg
            data-community-arrow
            class="arrow ml-2"
            width="10"
            height="7"
            viewBox="0 0 10 7"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
